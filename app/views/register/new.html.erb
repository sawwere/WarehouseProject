<%= render 'shared/errors' %>

<%= bootstrap_form_for :user, class: 'user_data_form' do |f| %>
  <div class="input_item">
    <%= f.text_field :name, label: "Имя пользователя" %>
  </div>
  <div class="input_item">
    <%= f.email_field :email, label: "Почта" %>
  </div>
  <div class="input_item">
    <%= f.password_field :password, label: "Пароль" %>
  </div>
  <div class="input_item">
    <%= f.password_field :password_confirmation, label: "Подтверждение пароля" %>
  </div>
  <div class="input_item">
    <%= f.submit 'Зарегистрироваться' %>
  </div>
  <div class='controls_container'>
    <%= link_to 'Уже есть аккаунт?', '/login', method: :get %>
  </div>
  <% end %>
